
<h2><%= @entry.title %></h2>
<p><%= @entry.detail %></p>
<br>
<%=link_to 'Edit Blog Entry', edit_entry_path( @entry) %>
<%= link_to 'Delete Blog Entry', entry_path( @entry ), method: :delete, data: { confirm: "Are you sure?"}%>

<h3>Comments</h3>

<%= link_to 'Create New Comment', new_entry_comment_path( @entry ) %>


<% @entry.comments.each do |comment| %>
  <div class="comment">
    <%= comment.detail %>
  <%= link_to "Edit", edit_entry_comment_path( @entry, comment) %>
  <%= link_to "Delete Comment", entry_path( @entry, comment ), method: :delete %>
  </div>

<% end %>
